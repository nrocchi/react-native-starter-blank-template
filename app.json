{
  "expo": {
    "name": "App Name",
    "slug": "app-name",
    "version": "0.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#ffffff",
      "androidMode": "default",
      "androidCollapsedTitle": "App Name",
      "iosDisplayInForeground": true
    },
    "ios": {
      "supportsTablet": false,
      "buildNumber": "0.0.0",
      "bundleIdentifier": "com.appcompany.appname",
      "infoPlist": {
        "CFBundleLocalizations" : ["fr"],
        "CFBundleAllowMixedLocalizations": true, 
        "CFBundleDevelopmentRegion" : "fr",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Cette application utilise la geolocation.",
        "NSLocationWhenInUseUsageDescription": "Cette application utilise la geolocation.",
        "NSPhotoLibraryUsageDescription": "Cette application utilise la galerie photo.",
        "NSCameraUsageDescription": "Cette application utilise la cam√©ra."
      },
      "config" : { "googleMapsApiKey": "GOOGLE_MAPS_API_KEY"}
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "GOOGLE_MAPS_API_KEY"
        }
      },
      "package": "com.appname",
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "androidStatusBar": {
      "barStyle": "light-content"
    }
  }
}
